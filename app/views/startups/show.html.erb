<div class="page-header">
  <h3><img src="<%= @startup.image_url %>"></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <div class="btn-group btn-group-justified">
        <a href="/startups" class="btn btn-primary">
          <i class="fa fa-chevron-left"></i>
        </a>
          <% if current_user.id==@startup.User_id%>
        <a href="/startups/<%= @startup.id %>/edit" class="btn btn-warning">
          <i class="fa fa-fw fa-edit"></i></a>
          <%else  %>
          <%end  %>
    <% if current_user.id==@startup.User_id%>
        <a href="/delete_startup/<%= @startup.id %>" class="btn btn-danger" rel="nofollow">
          <i class="fa fa-trash-o"></i>
        </a>
        <%else  %>
        <%end  %>
      </div>


      <dt>Name</dt>
      <dd><a href="https://www.google.com/#q=<%= @startup.name %>"><%= @startup.name %></a></dd>



      <dt>Address</dt>
      <dd><%= @startup.address %></dd>

      <dt>Funding Needed (Mn USD)</dt>
      <dd><%= @startup.funding %></dd>

      <dt>Industry</dt>
      <dd><%= @startup.industry %></dd>

      <dt>Intro</dt>
      <dd><%= @startup.intro %></dd>

      <dt>Founder</dt>

        <dd><%= @startup.user.username %> (<a href="mailto:<%= @startup.user.username.strip.gsub(/[^a-z0-9\s]/i, "").gsub(" ","") %>@example.com?Subject=Hello%20from%20Venturelinks">Contact</a>)</dd>
      <dt>Description</dt>
      <dd><%= @startup.description %></dd>

    </dl>


  </div>
</div>
