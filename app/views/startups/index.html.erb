<div class="page-header">
  <h1>
    Startups
    <a href="/startups/new" class="btn btn-default btn-block"><i class="fa fa-plus"></i></a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
  <th></th>
        <th>Name</th>

        <th>Funding Needed (Mn USD)</th>
        <th>Industry</th>
        <th>Intro</th>

        <th>Actions</th>
      </tr>

      <% @startups.each do |startup| %>
      <tr>
  <td><img src="<%=startup.image_url%>"></td>
        <td><%= startup.name %></td>


        <td><%= startup.funding %></td>
        <td><%= startup.industry %></td>
        <td><%= truncate(startup.intro) %></td>

        <td>
          <a href="/startups/<%= startup.id %>" class="btn btn-primary"><i class="fa fa-chevron-right"></i></a>
          <% if current_founder.try(:startup).try(:id)==startup.try(:id)%>
          <a href="/startups/<%= startup.id %>/edit" class="btn btn-warning"><i class="fa fa-fw fa-edit"></i></a>
          <%else  %>
  <%end  %>
                <% if current_founder.try(:startup).try(:id)==startup.try(:id)%>
          <a href="/delete_startup/<%= startup.id %>" class="btn btn-danger" rel="nofollow"><i class="fa fa-trash-o"></i></a>
          <%else  %>
<%end  %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
